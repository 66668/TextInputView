<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--新版UI:自定义邀请码输入框样式-->
    <declare-styleable name="textInputViewStyle" >
        <!--输入框个数-->
        <attr name="inputNumber" format="integer" />

        <!--输入类型 可设置数字，，文字，数字密码，密码等样式-->
        <attr name="inputType">
            <enum name="number" value="0"/>
            <enum name="text" value="1"/>
            <enum name="numberPassword" value="2"/>
            <enum name="textPassword" value="3"/>
        </attr>

        <!--输入框宽-->
        <attr name="inputWidth" format="dimension|reference" />

        <!--输入框高-->
        <attr name="inputHeight" format="dimension|reference" />

        <!--字体大小-->
        <attr name="inputSize" format="dimension|reference" />

         <!--字体颜色-->
        <attr name="inputColor" format="color|reference" />

        <!--输入框背景-->
        <attr name="inputBackground" format="reference" />

        <!--光标样式-->
        <attr name="inputCursor" format="reference" />
    </declare-styleable>

    <declare-styleable name="BorderTextView">
        <attr name="type"/>
        <attr name="borderColor" format="color"/>
    </declare-styleable>
</resources>